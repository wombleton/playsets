  body
    #container
      header
        .headline
          a#title(href='/')
            img(src='/images/playsets.png', height='90px', width='90px')
            img(src='/images/title.png', height='90px', width='403px')
          form#search
            - var tags = tags || ''
            input.tags(name='search', placeholder='tag search', value=tags)
            input.search(type='submit', value='Go')
        .nav
          ul
            - var context = context || 'directory';
            li
              - if (context === 'directory')
                a.active(href='/') Directory
              - else
                a(href='/') Directory
            li
              - if (context === 'new')
                a.active(href='/moves/new') Add Move
              -else
                a(href='/playsets/new') Add Playset
      div#main(role='main')!=body
      footer
        ul
          li
            | By
            a(href='http://twitter.com/wombleton') @wombleton
          li
            | For
            a(href='http://bullypulpitgames.com') Fiasco
          li
            a(href='/moves/rss') RSS

